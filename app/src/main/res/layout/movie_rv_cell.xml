<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_margin="20dp">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/googleg_standard_color_18"/>

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/img1"
                android:layout_alignTop="@id/img1"
                android:layout_alignRight="@id/img1"
                android:layout_alignBottom="@id/img1"
                android:gravity="center"
                android:layout_margin="1dp"
                android:fontFamily="sans-serif-medium"
                android:textSize="24dp"
                android:text="Joker"
                android:textColor="#221F1F" />
        </RelativeLayout>
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_margin="20dp">
            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/img2"
                android:layout_alignTop="@id/img2"
                android:layout_alignRight="@id/img2"
                android:layout_alignBottom="@id/img2"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textColor="#000000" />
        </RelativeLayout>
</LinearLayout>